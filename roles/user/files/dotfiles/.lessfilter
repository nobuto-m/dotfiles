#!/bin/sh

formatter=terminal16m
style=monokai

# don't pass directories to pygmentize because it's slow
[ -d "$1" ] && exit 1

case "$1" in
    *.txt)
        # don't pass .txt
        exit 1
    ;;
esac

# detect some lexer without suffix
mime_type=$(file -L -b --mime-type "$1")
case "$mime_type" in
    text/x-shellscript)
        lexer=sh
    ;;
    text/x-python)
        lexer=python
    ;;
    *)
        lexer=
    ;;
esac

pygmentize -f "$formatter" -O "style=${style}" -l "$lexer" "$1"
