join -t $'\t' --nocheck-order -a1 -o 1.1,2.2 -e 0 \
    <((find /var/log/ -name syslog.*.gz 2>/dev/null | sort -Vr | xargs zcat; cat /var/log/syslog{.1,}) | col1 : | uniq | sed -e 's/$/:00/;s/$/\t0/' | sort) \
    <((find /var/log/ -name syslog.*.gz 2>/dev/null | sort -Vr | xargs zcat; cat /var/log/syslog{.1,}) | egrep -w 'reason(=|: )4' | col1 : | uniq -c | sed -e 's/$/:00/;s/^ *//;s/\([0-9]\+\) \(.*\)/\2\t\1/' | sort)


